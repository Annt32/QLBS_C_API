@model CSharp5Nhom2.Models.Sach

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Sach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IDSach" class="control-label"></label>
                <input asp-for="IDSach" class="form-control" readonly />
                <span asp-validation-for="IDSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSach" class="control-label"></label>
                <input asp-for="TenSach" class="form-control" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDTacGia" class="control-label">Tác giả: </label>
                <select asp-for="IDTacGia" class="form-control">
                    <option value="">-- Chọn tác giả --</option>
                    @foreach (var tacGia in ViewBag.TacGiaList)
                    {
                        <option value="@tacGia.IDTacGia">@tacGia.TenTacGia</option>
                    }
                </select>
                <span asp-validation-for="IDTacGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDNXB" class="control-label">Nhà xuất bản: </label>
                <select asp-for="IDNXB" class="form-control">
                    <option value="">-- Chọn nhà xuất bản --</option>
                    @foreach (var nhaXuatBan in ViewBag.NhaXuatBanList)
                    {
                        <option value="@nhaXuatBan.IDNXB">@nhaXuatBan.TenNXB</option>
                    }
                </select>
                <span asp-validation-for="IDNXB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDTheLoai" class="control-label">Thể loại</label>
                <select asp-for="IDTheLoai" class="form-control">
                    <option value="">-- Chọn thể loại --</option>
                    @foreach (var theLoai in ViewBag.TheLoaiList)
                    {
                        <option value="@theLoai.IDTheLoai">@theLoai.TenTheLoai</option>
                    }
                </select>
                <span asp-validation-for="IDTheLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label"></label>
                <input asp-for="HinhAnh" class="form-control" id="HinhAnh" disabled="disabled" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" id="changeImage" name="changeImage" />
                <label for="changeImage">Cập nhật hình ảnh</label>
            </div>
            <div class="form-group" id="fileInputGroup" style="display:none;">
                <input type="file" name="newHinhAnh" id="newHinhAnh" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Mota" class="control-label"></label>
                <input asp-for="Mota" class="form-control" />
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <script>
            document.getElementById('changeImage').addEventListener('change', function () {
                var isChecked = this.checked;
                document.getElementById('fileInputGroup').style.display = isChecked ? 'block' : 'none';
                document.getElementById('HinhAnh').disabled = isChecked ? '' : 'disabled';
            });
        </script>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
